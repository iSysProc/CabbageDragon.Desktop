{
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react-hooks/recommended"
    ],
    "rules": {
        "@typescript-eslint/member-delimiter-style": [
            "warn",
            {
                "multiline": {
                    "delimiter": "none",
                    "requireLast": false
                },
                "singleline": {
                    "delimiter": "semi",
                    "requireLast": false
                }
            }
        ],
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "react/prop-types": "off"
    }
}